/* Register Card */
.register-container {
  background: #ffffff;
  max-width: 420px;
  margin: auto;
  padding: 35px;
  border-radius: 12px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
}

.register-container h3 {
  text-align: center;
  margin-bottom: 25px;
  font-size: 1.5rem;
}

.register-container h3 span {
  font-size: 0.9rem;
  color: #6c757d;
}

/* Inputs */
.register-container input {
  width: 100%;
  padding: 13px 14px;
  margin-bottom: 16px;
  font-size: 0.95rem;
  border-radius: 8px;
  border: 1px solid #dcdcdc;
  transition: 0.3s;
}

.register-container input:focus {
  outline: none;
  border-color: #7f9c3c;
  box-shadow: 0 0 0 2px rgba(13, 110, 253, 0.15);
}

/* Button */
.register-container button {
  width: 100%;
  padding: 13px;
  background: linear-gradient(135deg, #fd9d0d, #798b29);
  border: none;
  border-radius: 8px;
  color: #fff;
  font-size: 1rem;
  cursor: pointer;
  transition: 0.3s;
}

.register-container button:hover {
  transform: translateY(-1px);
  box-shadow: 0 6px 18px rgba(163, 192, 60, 0.35);
}

/* Divider */
.section-divider {
  width: 60%;
  margin: 40px auto 0;
  border: none;
  height: 1px;
  background: linear-gradient(to right, transparent, #ccc, transparent);
}

